<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">
    
    <data>
        <variable
            name="handler"
            type="com.ahpandroid.ahpmethod.ahpresultsdialog.AhpResultsDialog"/>
    </data>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="300dp"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" 
                android:src="@drawable/ic_close_dialog_gray"
                android:layout_alignParentRight="true"
                android:padding="10dp"
                android:layout_marginEnd="10dp"
                android:onClick="@{handler::close}"
                />
        </RelativeLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Resultados"
            android:textAllCaps="true"
            android:textStyle="bold"
            android:textSize="25sp"
            android:gravity="center"
            android:paddingBottom="20dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">

            <TextView
                android:id="@+id/ahp_result_alt_0"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="Alternativa 1"
                android:textSize="20sp"
                android:gravity="end"/>

            <LinearLayout
                android:layout_width="20dp"
                android:layout_height="5dp"
                android:background="@color/md_blue_grey_700"
                android:layout_marginStart="15dp"
                android:layout_marginEnd="15dp"/>

            <TextView
                android:id="@+id/ahp_result_alt_0_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="20%"
                android:textSize="20sp"
                android:gravity="start"/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">

            <TextView
                android:id="@+id/ahp_result_alt_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="Alternativa 1"
                android:textSize="20sp"
                android:gravity="end"/>

            <LinearLayout
                android:layout_width="20dp"
                android:layout_height="5dp"
                android:background="@color/md_blue_grey_700"
                android:layout_marginStart="15dp"
                android:layout_marginEnd="15dp"/>
            <TextView
                android:id="@+id/ahp_result_alt_1_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="20%"
                android:textSize="20sp"
                android:gravity="start"/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">

            <TextView
                android:id="@+id/ahp_result_alt_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="Alternativa 1"
                android:textSize="20sp"
                android:gravity="end"/>

            <LinearLayout
                android:layout_width="20dp"
                android:layout_height="5dp"
                android:background="@color/md_blue_grey_700"
                android:layout_marginStart="15dp"
                android:layout_marginEnd="15dp"/>
            <TextView
                android:id="@+id/ahp_result_alt_2_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="20%"
                android:textSize="20sp"
                android:gravity="start"/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginBottom="20dp">

            <TextView
                android:id="@+id/ahp_result_alt_3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="Alternativa 1"
                android:textSize="20sp"
                android:gravity="end"/>

            <LinearLayout
                android:layout_width="20dp"
                android:layout_height="5dp"
                android:background="@color/md_blue_grey_700"
                android:layout_marginStart="15dp"
                android:layout_marginEnd="15dp"/>

            <TextView
                android:id="@+id/ahp_result_alt_3_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="20%"
                android:textSize="20sp"
                android:gravity="start"/>

        </LinearLayout>

